{% extends 'pages/layout.html.twig' %}

{% block title %}Ajouter un nouveau post
{% endblock %}

{% block body %}
	{{ form_start(form) }}
	<div class="mb-4">
		{{ form_row(form.titre, {
                'attr': {'class': 'block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'}
            }) }}
	</div>

	<div class="mb-4">
		{{ form_row(form.description, {
                'attr': {'class': 'block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'}
            }) }}
	</div>

	<div class="mb-4">
		{{ form_row(form.image, {
                'attr': {'class': 'block w-full text-gray-700 py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'}
            }) }}
	</div>

	<div class="mb-4">
		{{ form_row(form.isPublic, {
                'attr': {'class': 'form-checkbox text-indigo-600'}
            }) }}
	</div>

	<div class="mb-6 text-center">
		<button class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
			Ajouter le post
		</button>
	</div>
	{{ form_end(form) }}
{% endblock %}
