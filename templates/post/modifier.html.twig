{% extends 'pages/layout.html.twig' %}

{% block title %}Modifier un post{% endblock %}

{% block body %}
    <h1 class="text-4xl font-semibold text-gray-900 mb-6">Modifier un post</h1>

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_row(form.titre, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(form.description, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(form.image, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(form.isPublic, {'attr': {'class': 'text-blue-600 focus:ring-blue-500'}}) }}
        </div>
        <button class="btn btn-primary bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Modifier le post
        </button>
    {{ form_end(form) }}
{% endblock %}
