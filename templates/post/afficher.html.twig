{% block title %}Détails du Post{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Détails du Post : {{ post.titre }}</h1>

        <div class="mb-4">
            <strong class="text-lg font-semibold text-gray-700">Titre:</strong>
            <p class="text-gray-600">{{ post.titre }}</p>
        </div>
        <div class="mb-4">
            <strong class="text-lg font-semibold text-gray-700">Description:</strong>
            <p class="text-gray-600">{{ post.description }}</p>
        </div>
        <div class="mb-4">
            <strong class="text-lg font-semibold text-gray-700">Date de création:</strong>
            <p class="text-gray-600">{{ post.date ? post.date|date('d/m/Y H:i') : 'Non spécifiée' }}</p>
        </div>

        {% if post.image %}
            <div class="mb-4">
                <strong class="text-lg font-semibold text-gray-700">Image:</strong>
                <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image du post" class="max-w-full h-auto rounded-lg mt-2" />
            </div>
        {% endif %}

        <div class="mb-4">
            <strong class="text-lg font-semibold text-gray-700">Public:</strong>
            <p class="text-gray-600">{{ post.isPublic ? 'Oui' : 'Non' }}</p>
        </div>

        <div class="flex space-x-4 mt-6">
            <a href="{{ path('app_modifier_post', {'id': post.id}) }}" class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300">Modifier</a>
            <a href="{{ "/post/" ~ post.getId() ~ "/supprimer" }}" class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-300" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce post ?')">Supprimer</a>
        </div>
    </div>
{% endblock %}
