{% extends 'pages/layout.html.twig' %}

{% block title %}Modifier une collection{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold mb-4">Modifier la collection</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        <div class="space-y-4">
            <div class="form-group">
                {{ form_row(form.titre, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.description, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.isPublic, {
                    'attr': {'class': 'inline-flex items-center'}
                }) }}
            </div>
            <div class="form-group">
                {% if collection.cover %}
                    <div class="mb-4">
                        <img src="{{ asset('uploads/covers/' ~ collection.cover) }}" alt="Cover" class="max-w-full h-auto rounded-md">
                        <p class="mt-2 text-sm text-gray-500">Image actuelle</p>
                    </div>
                {% endif %}
                {{ form_row(form.cover, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.tags, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.categorie, {
                    'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'}
                }) }}
            </div>
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Sauvegarder les modifications
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
